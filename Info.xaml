                    <Grid HorizontalAlignment="Left" Margin="5, 0">
                        <Button Content="● ● ●" VerticalAlignment="Bottom" FontSize="9" Foreground="#696969" 
                                Click="NeutrophilsRel_Click" BorderThickness="0" Background="#c4f2f2"/>
                    </Grid>
